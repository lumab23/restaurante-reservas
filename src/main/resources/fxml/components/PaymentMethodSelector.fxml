<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox styleClass="payment-method-selector" spacing="10" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label fx:id="lblInfo" styleClass="payment-method-info" wrapText="true"/>

    <ToggleGroup fx:id="metodoPagamentoGroup"/>

    <ToggleButton fx:id="btnPix" 
                 text="PIX" 
                 toggleGroup="$metodoPagamentoGroup"
                 styleClass="payment-method-button"
                 maxWidth="Infinity"/>

    <ToggleButton fx:id="btnCartao" 
                 text="Cartão de Crédito/Débito" 
                 toggleGroup="$metodoPagamentoGroup"
                 styleClass="payment-method-button"
                 maxWidth="Infinity"/>
</VBox> 