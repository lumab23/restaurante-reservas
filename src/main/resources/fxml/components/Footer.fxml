<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      styleClass="footer"
      spacing="10">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="5">
            <Text fx:id="txtContato" styleClass="footer-title">Contato</Text>
            <HBox spacing="10">
                <Hyperlink fx:id="linkEmail" text="atendimento@restaurante.com"/>
                <Text>|</Text>
                <Hyperlink fx:id="linkTelefone" text="(85) 3333-3333"/>
            </HBox>
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="5">
            <Text styleClass="footer-title">Redes Sociais</Text>
            <HBox spacing="10">
                <Hyperlink fx:id="linkInstagram" text="Instagram"/>
                <Text>|</Text>
                <Hyperlink fx:id="linkFacebook" text="Facebook"/>
            </HBox>
        </VBox>
    </HBox>

    <Text fx:id="txtCopyright" styleClass="footer-copyright"/>
</VBox> 