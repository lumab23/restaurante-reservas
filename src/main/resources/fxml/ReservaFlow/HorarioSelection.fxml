<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.reservas_restaurantes.ui.publico.ReservaFlow.HorarioSelectionController"
      styleClass="reserva-flow"
      spacing="20">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Text styleClass="step-title">Selecione um horário</Text>
    
    <VBox styleClass="reserva-step" spacing="15">
        <Text>Escolha o horário desejado para sua reserva:</Text>
        
        <VBox fx:id="horariosContainer" 
              spacing="10" 
              styleClass="horarios-grid"/>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Voltar" 
                    onAction="#onVoltarClick" 
                    styleClass="flow-button,secondary"/>
            <Button text="Continuar" 
                    onAction="#onContinuarClick" 
                    styleClass="flow-button,primary"/>
        </HBox>
    </VBox>
    
    <Text styleClass="info-text">
        * Os horários disponíveis são atualizados em tempo real.
        * Em caso de indisponibilidade, sugerimos escolher outro horário.
    </Text>
</VBox> 