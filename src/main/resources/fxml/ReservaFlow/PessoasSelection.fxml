<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.reservas_restaurantes.ui.publico.ReservaFlow.PessoasSelectionController"
      styleClass="reserva-flow"
      spacing="20">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Text styleClass="step-title">Quantidade de pessoas</Text>
    
    <VBox styleClass="reserva-step" spacing="15">
        <Text>Selecione a quantidade de pessoas para sua reserva:</Text>
        
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnMenos" 
                    text="-" 
                    onAction="#onMenosClick"
                    styleClass="qtd-button"/>
            
            <Label fx:id="lblQuantidade" 
                   text="1" 
                   styleClass="qtd-label"/>
            
            <Button fx:id="btnMais" 
                    text="+" 
                    onAction="#onMaisClick"
                    styleClass="qtd-button"/>
        </HBox>
        
        <Text styleClass="info-text">
            * Mínimo: 1 pessoa
            * Máximo: 8 pessoas por mesa
            * Para grupos maiores, entre em contato
        </Text>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Voltar" 
                    onAction="#onVoltarClick" 
                    styleClass="flow-button,secondary"/>
            <Button text="Continuar" 
                    onAction="#onContinuarClick" 
                    styleClass="flow-button,primary"/>
        </HBox>
    </VBox>
</VBox> 