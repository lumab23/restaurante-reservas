<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.reservas_restaurantes.ui.controller.PagamentoUIController"
      styleClass="main-container" spacing="20" alignment="CENTER">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="30" styleClass="content-box">
        <Label text="Pagamento da Reserva" styleClass="welcome-title"/>
        <Label text="Confirme os detalhes e realize o pagamento" styleClass="welcome-subtitle"/>
        
        <!-- Resumo da Reserva -->
        <VBox styleClass="info-box" spacing="15">
            <Label text="Resumo da Reserva" styleClass="section-label"/>
            
            <!-- Dados do Cliente -->
            <VBox spacing="10" styleClass="payment-section">
                <Label text="Informações do Cliente" styleClass="subsection-label"/>
                <GridPane vgap="8" hgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                    </columnConstraints>
                    
                    <Label text="Nome Completo:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Text fx:id="clienteText" styleClass="info-text" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </VBox>

            <!-- Dados da Mesa -->
            <VBox spacing="10" styleClass="payment-section">
                <Label text="Detalhes da Mesa" styleClass="subsection-label"/>
                <GridPane vgap="8" hgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                    </columnConstraints>
                    
                    <Label text="Mesa Selecionada:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Text fx:id="mesaText" styleClass="info-text" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Capacidade da Mesa:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Text fx:id="numPessoasText" styleClass="info-text" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Dados da Reserva -->
            <VBox spacing="10" styleClass="payment-section">
                <Label text="Detalhes da Reserva" styleClass="subsection-label"/>
                <GridPane vgap="8" hgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                    </columnConstraints>
                    
                    <Label text="Data e Horário:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Text fx:id="dataHoraText" styleClass="info-text" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Tipo de Ocasiao:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Text fx:id="ocasiaoText" styleClass="info-text" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Status da Reserva:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Text fx:id="statusText" styleClass="info-text" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
            </VBox>
        </VBox>

        <!-- Valor Total -->
        <VBox styleClass="price-box" alignment="CENTER" spacing="10">
            <Label text="Valor Total da Reserva" styleClass="section-label"/>
            <Text fx:id="valorTotalText" styleClass="price-value"/>
            <Label text="* Valor por pessoa: R$ 50,00" styleClass="info-text"/>
        </VBox>

        <!-- Dados do Cartão -->
        <VBox styleClass="info-box" spacing="15">
            <Label text="Informações de Pagamento" styleClass="section-label"/>
            <Label text="Preencha os dados do seu cartão de crédito" styleClass="welcome-subtitle"/>
            
            <GridPane vgap="12" hgap="15">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="120"/>
                    <ColumnConstraints minWidth="200" prefWidth="200"/>
                </columnConstraints>
                
                <Label text="Número do Cartão:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="numeroCartaoField" promptText="0000 0000 0000 0000" 
                        styleClass="card-input" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Nome do Titular:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="titularField" promptText="Nome como no cartão" 
                        styleClass="card-input" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <HBox spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Validade (MM/AA):" styleClass="form-label"/>
                        <TextField fx:id="validadeField" promptText="MM/AA" 
                                styleClass="card-input"/>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="CVV:" styleClass="form-label"/>
                        <TextField fx:id="cvvField" promptText="123" 
                                styleClass="card-input"/>
                    </VBox>
                </HBox>
            </GridPane>
        </VBox>

        <!-- Botões -->
        <HBox spacing="20" alignment="CENTER" styleClass="button-container">
            <Button text="Confirmar Pagamento" onAction="#confirmarPagamento" styleClass="button-primary">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true" styleClass="button-icon-white">
                        <image>
                            <Image url="@/images/payment-icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Cancelar" onAction="#cancelarPagamento" styleClass="button-secondary">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true" styleClass="button-icon-white">
                        <image>
                            <Image url="@/images/cancel-icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</VBox>