<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.reservas_restaurantes.ui.controller.AdminLoginController"
      spacing="20" alignment="CENTER" styleClass="main-container">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Login Administrativo" styleClass="title-label"/>
    
    <GridPane vgap="10" hgap="10" alignment="CENTER">
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Senha:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="txtSenha" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    
    <Label fx:id="lblErro" styleClass="error-label" visible="false"/>
    
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="btnLogin" text="Entrar" styleClass="primary-button"/>
        <Button fx:id="btnVoltar" text="Voltar" styleClass="secondary-button"/>
    </HBox>
    
</VBox> 