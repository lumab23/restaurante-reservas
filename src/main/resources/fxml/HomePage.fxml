<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.reservas_restaurantes.ui.public.HomePageController"
            stylesheets="@../styles/main.css">
    
    <top>
        <VBox styleClass="header">
            <ImageView fitWidth="1200" fitHeight="400" preserveRatio="true">
                <Image url="@../images/banner.jpg"/>
            </ImageView>
            <HBox styleClass="nav-menu" alignment="CENTER" spacing="20">
                <Button text="Reservar Mesa" onAction="#onReservarMesaClick" styleClass="nav-button"/>
                <Button text="Cardápio Digital" onAction="#onCardapioClick" styleClass="nav-button"/>
                <Button text="Avalie-nos" onAction="#onAvaliacaoClick" styleClass="nav-button"/>
                <Button text="Localização" onAction="#onLocalizacaoClick" styleClass="nav-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" styleClass="content">
            <Text styleClass="title">Encantador e mágico, como o poder de um feitiço.</Text>
            
            <VBox styleClass="horario-section">
                <Text styleClass="section-title">Horário de Funcionamento</Text>
                <GridPane hgap="10" vgap="5">
                    <Label text="Seg:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Fechado" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Ter:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="18:00 às 23:00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Qua:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label text="18:00 às 23:00" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Qui:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label text="18:00 às 23:00" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Sex:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label text="17:00 às 23:00" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Sáb:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <Label text="17:00 às 23:00" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    
                    <Label text="Dom:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                    <Label text="11:30 às 14:30 e 18:00 às 21:00" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                </GridPane>
            </VBox>
            
            <VBox styleClass="localizacao-section">
                <Text styleClass="section-title">Localização</Text>
                <Text>Rua Walter de Castro, 311 - Cidade dos Funcionários, Fortaleza - CE, Brasil</Text>
                <Button text="Mostrar Mapa" onAction="#onMostrarMapaClick" styleClass="map-button"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <VBox styleClass="footer" alignment="CENTER">
            <Text>Copyright © 2024 Sistema de Reservas - atendimento@restaurante.com</Text>
        </VBox>
    </bottom>
</BorderPane> 